{
  "name": "username.github.io",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "test:e2e": "start-server-and-test 'npx serve out -l 4173' http://localhost:4173 cy:run",
    "test:e2e:open": "start-server-and-test 'npx serve out -l 4173' http://localhost:4173 cy:open",
    "test:mutate": "npx stryker run",
    "lint:cypress": "bash scripts/lint-cypress.sh"
  },
  "dependencies": {
    "lucide-react": "^0.574.0",
    "next": "16.1.6",
    "react": "19.2.3",
    "react-dom": "19.2.3"
  },
  "devDependencies": {
    "@stryker-mutator/core": "^9.5.1",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "axe-core": "^4.11.1",
    "cypress": "^15.10.0",
    "cypress-axe": "^1.7.0",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-cypress": "^6.0.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "serve": "^14.2.5",
    "start-server-and-test": "^2.1.3",
    "tailwindcss": "^4",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{ts,tsx,js,mjs}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ],
    "cypress/e2e/**/*.cy.ts": [
      "bash scripts/lint-cypress.sh"
    ]
  }
}
